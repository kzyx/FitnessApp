<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">

        <TextView
            android:id="@+id/weightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="2dp"
            android:text="000.00"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/weightText"
            android:text="lbs"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/repetitionText"
            android:text="reps"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/listingNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:text="##"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/repetitionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/units"
            android:layout_marginStart="-68dp"
            android:layout_marginLeft="-43dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/units"
            android:layout_toRightOf="@+id/weightText"
            android:text="999"
            android:textSize="20dp" />

        <android.widget.Space
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@+id/reps"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="-30dp"
            android:background="?android:attr/listDivider"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>